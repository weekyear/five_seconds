<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <shape android:shape="oval">
      <stroke android:color="@color/recordingBtnLineColor"
              android:width="2dp"/>
      <solid android:color="@color/alarmPrimaryLightColor"/>
    </shape>
  </item>
  <item android:state_pressed="true">
    <shape android:shape="oval">
      <stroke android:color="@color/recordingBtnLineColor"
              android:width="4dp"/>
      <solid android:color="@color/recordingBtnPressedColor"/>
    </shape>
  </item>
  <item android:state_selected="true">
    <shape android:shape="oval">
      <stroke android:color="@color/recordingBtnLineColor"
              android:width="4dp"/>
      <solid android:color="@color/recordingBtnPressedColor"/>
    </shape>
  </item>
</selector>