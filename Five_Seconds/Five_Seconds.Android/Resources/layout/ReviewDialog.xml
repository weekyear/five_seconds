<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarmResultLayout"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="감사! 압도적 감사!!"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/alarmPrimaryColor"/>
    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:layout_below="@id/titleText"
        android:layout_centerVertical="true"
        android:textColor="@color/colorPrimaryDark"
        android:text="5초의 알람을 사용해주셔서 감사합니다! 저희 어플 사용이 만족스러우신가요?"
        android:textSize="20dp"/>
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageText">
        <Button 
            android:id="@+id/cancelBtn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="음..별로.."
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/ripple_transparent_button" />
        <Button
            android:id="@+id/confirmBtn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="맘에 들어요!"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/ripple_count_button"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/feedbackButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageText"
        android:visibility="gone">
        <Button 
            android:id="@+id/cancelBtn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="아뇨, 괜찮아요"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/ripple_transparent_button" />
        <Button
            android:id="@+id/confirmBtn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="넵! 도울게요"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/ripple_count_button"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/reviewButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageText"
        android:visibility="gone">
        <Button 
            android:id="@+id/laterBtn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="나중에요"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/ripple_transparent_button" />
        <Button
            android:id="@+id/cancelBtn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="안 할래요"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/darker_gray"/>
        <Button
            android:id="@+id/confirmBtn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="추천할게요!"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/ripple_count_button"/>
    </LinearLayout>
</RelativeLayout>