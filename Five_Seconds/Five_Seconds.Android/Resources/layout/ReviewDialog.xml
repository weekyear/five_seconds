<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarmResultLayout"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/reviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="감사! 압도적 감사!!"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/reviewPrimaryDarkColor"/>
    <TextView
        android:id="@+id/reviewText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@id/reviewTitle"
        android:layout_centerHorizontal="true"
        android:textColor="@color/reviewTextColor"
        android:breakStrategy="balanced"
        android:text="5초의 알람을 사용해주셔서 감사합니다!"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/reviewText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@id/reviewText1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/reviewTextColor"
        android:breakStrategy="balanced"
        android:text="저희 어플이 도움이 되고 있나요?"
        android:textSize="20dp"/>
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewText2">
        <Button 
            android:id="@+id/cancelBtn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="음..별로.."
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/reviewTextColor"
            android:background="@drawable/ripple_review_cancel_button" />
        <Button
            android:id="@+id/confirmBtn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="맘에 들어요!"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/ripple_review_confirm_button"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/feedbackButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewText2"
        android:visibility="gone">
        <Button 
            android:id="@+id/cancelBtn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="아뇨, 괜찮아요"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/reviewTextColor"
            android:background="@drawable/ripple_review_cancel_button" />
        <Button
            android:id="@+id/confirmBtn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="넵! 도울게요"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/ripple_review_confirm_button"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/reviewButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewText2"
        android:visibility="gone">
        <Button 
            android:id="@+id/laterBtn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="나중에요"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/reviewTextColor"
            android:background="@drawable/ripple_review_cancel_button" />
        <Button
            android:id="@+id/cancelBtn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="안 할래요"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#1c313a"
            android:background="@drawable/ripple_review_deny_button"/>
        <Button
            android:id="@+id/confirmBtn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="추천할게요!"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/ripple_review_confirm_button"/>
    </LinearLayout>
</RelativeLayout>