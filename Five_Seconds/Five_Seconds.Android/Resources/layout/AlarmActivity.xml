<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alarmPrimaryColor">
        <TextView
            android:text="5.00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/countTextView"
        android:layout_centerInParent="true"
        android:visibility="invisible"
            android:gravity="center"
            android:textColor="@color/alarmTextColor"
            android:phoneNumber="true"
            android:textSize="100dp" />
    <RelativeLayout
        android:id="@+id/alarmTextLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <RelativeLayout
            android:id="@+id/topAlarmLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_five_seconds"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="12dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_five_seconds_mini"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_five_seconds"
                android:text="5초의 알람"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:textColor="@color/alarmTextColor"/>
            <TextView
                android:id="@+id/timeTextView"
                android:text="오전 6:00"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/alarmTextColor"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/tellAlarmLayout"
        android:orientation="vertical"
        android:layout_below="@id/alarmTextLayout"
        android:layout_marginTop="40dp"
        android:padding="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/timeOutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60초 이내"
            android:layout_marginTop="20dp"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="#e1f5fe"/>
        <TextView
            android:id="@+id/alarmTextView"
            android:text="Alarm Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/alarmTextColor"
            android:textStyle="bold"
            android:textSize="52dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pleaseSayText"
            android:layout_margin="10dp"
            android:text="라고 말해주세요"
            android:textColor="@color/alarmTextColor"
            android:textSize="28dp"
            android:gravity="center"
            android:background="@color/alarmPrimaryColor"/>
        <EditText
            android:id="@+id/alarmEditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="25dp"
            android:padding="16dp"
            android:textColor="@color/alarmTextColor"
            android:textSize="24dp"
            android:visibility="gone"
            android:gravity="center"
            android:background="@drawable/border_edittext"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:orientation="vertical"
        android:layout_below="@id/tellAlarmLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal | bottom"
        android:layout_marginBottom="50dp">        
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:padding="12dp"
            android:id="@+id/tellmeView"
            android:background="@drawable/rounded_button"
            android:src="@drawable/ic_mic"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:textSize="18dp"
            android:background="@drawable/rounded_button"
            android:textStyle="bold"
            android:id="@+id/startButton"
            android:textColor="@color/alarmTextColor"
            android:visibility="gone"
            android:gravity="center"/>
        <Button
            android:id="@+id/laterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            android:text="@string/realarm"
            android:background="@drawable/rectangle_button"
            android:textColor="@color/alarmTextColor"/>
    </LinearLayout>
</RelativeLayout>