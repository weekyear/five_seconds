<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alarmPrimaryColor">
    <LinearLayout
        android:id="@+id/countLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/finishAlarmText"
            android:text="알람 이름"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:textColor="@color/alarmTextColor"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"/>
        <LinearLayout
            android:id="@+id/countNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:text="5.0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countTextView"
                android:textColor="@color/countTextColor"
                android:textSize="100dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="16sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp" />
            <TextView
                android:id="@+id/secondsText"
                android:text="@string/Seconds"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/countTextColor"/>
        </LinearLayout>
        <TextView
            android:id="@+id/startText"
            android:text="@string/Start"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@id/countNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="@color/alarmTextColor"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"/>
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/notCountLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <RelativeLayout
        android:id="@+id/alarmTextLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <RelativeLayout
            android:id="@+id/topAlarmLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_five_seconds"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="12dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_five_seconds_mini"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_five_seconds"
                android:text="@string/FiveSecondsAlarm"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:textColor="@color/alarmTextColor"/>
            <TextView
                android:id="@+id/timeTextView"
                android:text=""
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/alarmTextColor"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal | bottom"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true">        
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:padding="12dp"
            android:id="@+id/tellmeView"
            android:background="@drawable/rounded_button"
            android:src="@drawable/ic_mic"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:textSize="18dp"
            android:background="@drawable/rounded_button"
            android:textStyle="bold"
            android:id="@+id/startButton"
            android:text="@string/Go"
            android:textColor="@color/alarmTextColor"
            android:visibility="gone"
            android:gravity="center"/>
        <Button
            android:id="@+id/laterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            android:text="@string/realarm"
            android:background="@drawable/rectangle_button"
            android:textColor="@color/alarmTextColor"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tellAlarmLayout"
        android:orientation="vertical"
        android:layout_below="@id/alarmTextLayout"
        android:layout_above="@id/buttonLayout"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/timeOutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="20dp"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/countTextColor"/>
        <TextView
            android:id="@+id/alarmTextView"
            android:text="Alarm Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@id/timeTextView"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:textColor="@color/alarmTextColor"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pleaseSayText"
            android:layout_margin="10dp"
            android:text="@string/PleaseSay"
            android:textColor="@color/alarmTextColor"
            android:textSize="28dp"
            android:gravity="center"
            android:background="@color/alarmPrimaryColor"/>
        <EditText
            android:id="@+id/alarmEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:padding="16dp"
            android:textColor="@color/alarmTextColor"
            android:textSize="30dp"
            android:visibility="gone"
            android:gravity="center"
            android:background="@drawable/border_edittext"/>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>