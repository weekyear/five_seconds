
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alarmPrimaryColor">
        <TextView
            android:text="5초"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/countTextView"
        android:layout_centerInParent="true"
        android:visibility="invisible"
            android:gravity="center"
            android:textColor="@color/alarmTextColor"
            android:phoneNumber="true"
            android:textSize="100dp" />
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/alarmTextLayout"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_five_seconds_mini"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5초의 알람"
                android:textSize="16dp"
                android:textColor="@color/alarmTextColor"/>
        </LinearLayout>
        <TextView
            android:text="오전 6:00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="75dp"
            android:layout_gravity="start"
            android:textSize="22dp"
            android:id="@+id/timeTextView"
            android:textColor="@color/alarmTextColor"/>
        <TextView
            android:text="Alarm Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_gravity="start"
            android:id="@+id/alarmTextView"
            android:textColor="@color/alarmTextColor"
            android:textStyle="bold"
            android:textSize="48dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/alarmLayout"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pleaseSayText"
            android:layout_margin="50dp"
            android:text="알람 이름을 말해주세요"
            android:textColor="@color/alarmTextColor"
            android:layout_marginTop="50dp"
            android:textSize="28dp"
            android:gravity="center"
            android:background="@color/alarmPrimaryColor"/>
        <EditText
            android:id="@+id/alarmEditText"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_margin="40dp"
            android:padding="16dp"
            android:textColor="@color/alarmTextColor"
            android:textSize="24dp"
            android:visibility="gone"
            android:background="@drawable/border_edittext"/>        
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="8dp"
            android:id="@+id/tellmeView"
            android:background="@drawable/rounded_button"
            android:src="@drawable/ic_mic"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:textSize="18dp"
            android:background="@drawable/rounded_button"
            android:textStyle="bold"
            android:id="@+id/startButton"
            android:textColor="@color/alarmTextColor"
            android:visibility="gone"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recordingLayout"
        android:background="@color/alarmTextColor"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="invisible"
        android:padding="35dp">   
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_microphone"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:text="알람 이름을 알려주세요!!"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pleaseRecordView"
            android:paddingTop="16dp"
            android:textColor="#82263238"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</RelativeLayout>