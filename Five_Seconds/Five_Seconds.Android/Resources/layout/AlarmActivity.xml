<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">
        <TextView
            android:text="5초"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/countTextView"
        android:layout_centerInParent="true"
        android:visibility="invisible"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:phoneNumber="true"
            android:textSize="100dp" />\
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/missionLayout"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:text="이제 뭘 할지 알려주세요!!"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/explanationTextView"
            android:textColor="#ffcec6ff"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:text="Mission Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/missionTextView"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:phoneNumber="true"
            android:textSize="45dp" />
        <EditText
            android:id="@+id/missionEditText"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:background="@android:color/white"/>
        <Button
            android:text="뭐 할 건지 알려주세요"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:id="@+id/tellmeButton"
            android:textAllCaps="false"
            android:gravity="center" />
    </LinearLayout>
</RelativeLayout>